{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2015",
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*",
    "./src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules", "**/*.test.ts", "**/@types/**/*"
  ]
}
